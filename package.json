{
  "name": "github-ai-tracker",
  "version": "1.0.0",
  "description": "Track trending AI open source projects on GitHub",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --watch src --exec ts-node -r tsconfig-paths/register src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "clean": "rm -rf dist",
    "db:init": "psql $DATABASE_URL -f src/db/schema.sql",
    "db:migrate": "node scripts/run-migrations.js",
    "db:seed": "ts-node -r tsconfig-paths/register scripts/seed-projects.ts",
    "db:reset": "npm run db:init && npm run db:migrate && npm run db:seed",
    "job:sync": "ts-node -r tsconfig-paths/register src/jobs/sync-trending.job.ts",
    "job:metrics": "ts-node -r tsconfig-paths/register src/jobs/update-metrics.job.ts",
    "job:alerts": "ts-node -r tsconfig-paths/register src/jobs/check-alerts.job.ts",
    "test": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:watch": "jest --watch",
    "test:setup": "bash scripts/test-setup.sh",
    "test:teardown": "bash scripts/test-teardown.sh",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "github",
    "ai",
    "trending",
    "analytics",
    "tracking"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@jest/test-sequencer": "^30.2.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "nock": "^13.5.6",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
